
<!-- The Main White Box -->
<div class="main_txt">
	<h1>Shelter  Website</h1> 
	<hr />
	<table width="100%">
		<thead>
			<tr>
				<td> User - Login </td>
				<td> Shelter - Login </td>
				<td> Admin - Login </td>
			</tr>
		</thead>
		<tr>
			<td>
				<form action="/Users/menu" method="get">
					<select name="user_name">
						<% @users.each do |user| %>
							<option value="<%= user %>" ><%= user %></option> 
						<% end %>
					</select>
					<button> Submit </button>
				</form>
			</td>
			<td>
				<form action="/Shelter" method="get">
					<select name="shelter_name">
						<% @shelters.each do |shelter| %>
							<option value="<%= shelter %>" ><%= shelter %></option> 
						<% end %>
					</select>
					<button> Submit </button>
				</form>
			</td>
			<td>
				<form action="/Admin" method="get">
					<button> Submit </button>
				</form>
			</td>
		</tr>
	</table>
</div>
