
<!-- The Main White Box -->
<div class="main_txt">
	<h1>Shelter  Website</h1> 
	<hr />
	<table width="100%">
		<thead>
			<tr>
				<td> <h1>Pets - View </h1></td>
				<td> <h1>Adopt </h1></td>
			</tr>
		</thead>
		<tr>
			<td>
				<form method="get" action="Users_Give_away" />
					<table>
						<% @pets.each do |pet| %>
							<tr>
								<td>
									<img src="<%= @pet_info[pet][3] %>" width="100px" />
								</td>
								<td>
									<%= @pet_info[pet][0] %>
									<ul><% @pet_info[pet][4].split("|").each do |toy| %>
											<li>
											<%= toy %>
											</li>
										<% end %>
									</ul>
								</td>
							</tr>
						<% end %>
					</table>
					<button>Give Away</button>
				</form>
			</td>
			<td>
				<form action="/Users/shelter_list" method="get">
					<button> Submit </button>
				</form>
			</td>
		</tr>
	</table>
</div>
