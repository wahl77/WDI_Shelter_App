<!-- The Main White Box -->
<div class="main_txt">
	<h1>Shelter  Website</h1> 
	<h1> You are <%= $curr_shelter %></h1>
	<table width="100%" border="1px">
		<thead>
			<tr>
				<td><h1>Delete pet</h1></td>
				<td><h1>Get pet </h1></td>
			</tr>
		</thead>
		<tr>
			<td>
				<form action="shelter_delete_pet" method="get">
					<table>
						<% @pets.each do |pet| %>
							<tr>
								<td>
									<img src="<%= @pet_info[pet][3] %>" width="100px" />
								</td>
								<td>
									<input type="radio" group="pet_name" name="pet_name" value="<%=@pet_info[pet][0] %>" <h2><%= @pet_info[pet][0]%></h2></input><br />
									<ul><% @pet_info[pet][4].split("|").each do |toy| %>
											<li>
											<%= toy %>
											</li>
										<% end %>
									</ul>

								<% end %>
							</td>

						</tr>
					</table>
					<button>Delete</button>
				</form>
			</td>
			<td>
				<form action="shelter_add_pet" method="get">
					Pet name<input type="text" name="pet_name"></input><br/>
					<select name="gender">
						<option value="male">male</option> 
						<option value="female">female</option> 
					</select><br/>
					<select name="type">
						<option value="dog">dog</option> 
						<option value="cat">cat</option> 
					</select><br/>
					Toys<input type="text" name="toys"></input><br />
					<button>Get Pet</button>
				</form>
			</td>
		</tr>
	</table>
</div>
